{
  "manifest_version": 2,

  "name": "BIDMC Helper extension",
  "short_name": "Helper",
  "description": "Keep our managed Chrome working great!",
  "version": "1.0.2",

  "author": "Robert Hurst <rhurst@bidmc.harvard.edu>",
  "icons": {
    "128": "icon-128.png",
    "256": "icon-256.png"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ "https://holmes-stage.caregroup.org/*"],
      "js": [ "headerless-print.js" ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "BIDMC Helper",
    "default_popup": "options.html"
	},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "minimum_chrome_version": "69",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "config.json",
    "*.png"
  ]
}
